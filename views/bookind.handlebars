<div id="book-page">
  <a href="/books">Back</a>
  <div class="container">
    <h1>{{bookind.title}}</h1>
    <p>This book has {{bookind.pageqty}} pages.</p>
    <div class="actions">
      <a href="/books/edit/{{bookind.id}}">Edit</a>
      <form action="/books/remove/{{bookind.id}}" method="post">
        <input type="submit" value="Remove">
      </form>
    </div>
  </div>
</div>